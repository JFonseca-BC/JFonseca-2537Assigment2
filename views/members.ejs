<%- include('templates/header', { user: user, isLoggedIn: isLoggedIn, isAdmin: isAdmin }) %>

<h1 class="mb-4">Hello, <%= user %>! Welcome to the Members Area.</h1>

<h2 class="mb-3">Image Gallery</h2>

<div class="row">
    <% images.forEach(function(imagePath) { %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4"> <div class="card">
                <img src="<%= imagePath %>" class="card-img-top" alt="Member Image" style="height: 250px; object-fit: cover;">
                </div>
        </div>
    <% }); %>
</div>

<div class="mt-4">
    <a href="/logout" class="btn btn-secondary">Log Out</a>
</div>


<%- include('templates/footer') %>