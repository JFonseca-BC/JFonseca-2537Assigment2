<%- include('templates/header', { user: user, isLoggedIn: isLoggedIn, isAdmin: isAdmin }) %>

<div class="alert alert-danger mt-4" role="alert">
  <h4 class="alert-heading"><%= errorTitle || 'Error' %></h4>
  <p><%= errorMessage %></p>
  <hr>
  <p class="mb-0">
      <% if (backLink) { %>
          <a href="<%= backLink %>" class="btn btn-secondary btn-sm">Go Back</a>
      <% } %>
      <a href="/" class="btn btn-outline-secondary btn-sm ms-2">Go Home</a>
  </p>
</div>


<%- include('templates/footer') %>